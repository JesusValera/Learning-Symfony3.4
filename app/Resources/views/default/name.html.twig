{% extends 'base.html.twig' %}

{% block body %}

    <br>
    <h4>Write through the URL the parameter: </h4>
    <h5>http://127.0.0.1:8000/name/<span style="color: darkblue;">{foo}</span></h5>

    <h5>Write <span style="color: red;">'error'</span> to get an error page.</h5>
    <br>

    <p>Using an asset.</p>
    <img src="{{ asset('favicon.ico') }}"/>
    <br>
    <br>

    <p>IF with Twig.</p>
    {% if arg is defined %}
        {% if arg=="" %}
            There is no argument.
        {% elseif arg=="test" %}
            The argument is 'test'.
        {% else %}
            {{ arg }}
        {% endif %}
    {% endif %}

    <br>
    <br>
    <p>FOR in sequence ..</p>
    {% for i in 0..10 %}
        * {{ i }}
    {% endfor %}

    <br>
    <br>
    <p>FOR in sequence ..</p>
    {% for i in 'a'|upper..'z'|upper %}
        * {{ i }}
    {% endfor %}

    <br>
    <br>
    <p>FOR & IF with Twig.</p>
    {% for name in names if name.active %}
        <li>{{ name.name }}</li>
    {% endfor %}
    <br>

{% endblock %}
