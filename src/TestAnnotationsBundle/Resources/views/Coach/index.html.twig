{% extends 'base.html.twig' %}

{% block body %}
    <h1>Coaches list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Lastname</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for coach in coaches %}
            <tr>
                <td><a href="{{ path('coach_show', { 'id': coach.id }) }}">{{ coach.id }}</a></td>
                <td>{{ coach.name }}</td>
                <td>{{ coach.lastname }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('coach_show', { 'id': coach.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('coach_edit', { 'id': coach.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('coach_new') }}">Create a new coach</a>
        </li>
    </ul>
{% endblock %}
